<div>
  <div>
    <h1>
      List of all portfolios
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new portfolio
    </h2>

    <form action="/insert_portfolio" method="post">
      <div>
        <label for="day_box">
          Day
        </label>

        <input type="date" id="day_box" name="query_day">
      </div>

      <div>
        <label for="stock_id_box">
          Stock
        </label>

        <input type="text" id="stock_id_box" name="query_stock_id">
      </div>

      <div>
        <label for="weight_box">
          Weight
        </label>

        <input type="text" id="weight_box" name="query_weight">
      </div>

      <div>
        <label for="dollarpos_box">
          Dollarpos
        </label>

        <input type="text" id="dollarpos_box" name="query_dollarpos">
      </div>

      <div>
        <label for="portfoliovalue_box">
          Portfoliovalue
        </label>

        <input type="text" id="portfoliovalue_box" name="query_portfoliovalue">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create portfolio
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Day
        </th>

        <th>
          Stock
        </th>

        <th>
          Weight
        </th>

        <th>
          Dollarpos
        </th>

        <th>
          Portfoliovalue
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_portfolios.each do |a_portfolio| %>
      <tr>
        <td>
          <%= a_portfolio.id %>
        </td>

        <td>
          <%= a_portfolio.day %>
        </td>

        <td>
          <%= a_portfolio.stock_id %>
        </td>

        <td>
          <%= a_portfolio.weight %>
        </td>

        <td>
          <%= a_portfolio.dollarpos %>
        </td>

        <td>
          <%= a_portfolio.portfoliovalue %>
        </td>

        <td>
          <%= a_portfolio.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_portfolio.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_portfolio.updated_at) %> ago
        </td>

        <td>
          <a href="/portfolios/<%= a_portfolio.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
