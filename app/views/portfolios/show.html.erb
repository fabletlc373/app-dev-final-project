<div>
  <div>
    <h1>
      Portfolio #<%= current_user.id %> details
    </h1>

    <div>
      <div>
        <a href="/portfolios">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_portfolio/<%= @current_user.id %>">
          Delete portfolio
        </a>
      </div>
    </div>

    <table border="1">
      <tr>
        <th>
          Day
        </th>
        <th>
          Portfolio Value
        </th>
        <th>
          Portfolio Return
        </th>

        <% @the_portfolio.each do |p| %>
          <tr>
            <td>
              <%= p['day'] %>
            </td>
            <td>
              <%= p['portfoliovalue'] %>
            </td>
            <td>
              <%= p['return'] %>
            </td>

          </tr>
        <%end%>

        <hr>
