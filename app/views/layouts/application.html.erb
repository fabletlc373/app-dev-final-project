<!DOCTYPE html>
<html>
  <head>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.css">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav>
      <% if current_user != nil%>
        <div class="container text-center">
          <div class="row">
            <div class="col">
              <a href="/users/sign_out"> Sign out </a>
            </div>
            <div class="col">
              <a href="/users/edit"> Edit profile </a>
            </div>
            <div class="col">
              <a href="/"> Today's prices </a>
            </div>
            <div class="col">
              <a href="/build_portfolio"> Build portfolio </a>
            </div>
            <div class="col">
              <a href="/my_portfolio"> View portfolio </a>
            </div>
          </div>
        </div>

      <%else%>
        <div class="container text-center">
          <div class="row">
            <div class="col">
              <a href="/"> Today's prices </a>
            </div>
            <div class="col">
              <a href="/users/sign_up"> Sign up </a>
            </div>
            <div class="col">
              <a href="/users/sign_in"> Sign in </a>
            </div>
          </div>
        </div>
      </div>

    <%end%>
  </nav>

  <hr>

  <% if notice.present? %>
    <div style="color: green">
      <%= notice %>
    </div>
  <% end %>

  <% if alert.present? %>
    <div style="color: red">
      <%= alert %>
    </div>
  <% end %>

  <div class="container text-center">
    <div class="row">
      <div class="col">
        <h1>Portfolio Builder</h1>
      </div>
    </div>
  </div>

  <hr>
  <%= yield %>
</body>
</html>
